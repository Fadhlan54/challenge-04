<%- include('./layouts/header') -%>

<section class="side__nav">
  <div class="d-flex flex-row">
    <%- include('./layouts/sideBar.ejs') %>
    <div class="main__section">
      <%- include('./layouts/navbar') %>
      <div class="d-flex">
        <div class="cars">
          <ul class="navbar-nav flex-grow-1 pt-2 text-left">
            <li class="nav-item">
              <a class="nav-link" href="#">
                <p>CARS</p>
              </a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">
                <p>List Car</p>
              </a>
            </li>
          </ul>
        </div>
        <div class="content">
          <div class="container">
            <nav
              style="
                --bs-breadcrumb-divider: url(
                  &#34;data:image/svg + xml,
                  %3Csvgxmlns='http://www.w3.org/2000/svg'width='8'height='8'%3E%3Cpathd='M2.5 0L1 1.5 3.5 4 1 6.5 2.5 8l4-4-4-4z'fill='currentColor'/%3E%3C/svg%3E&#34;
                );
              "
              aria-label="breadcrumb"
            >
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Cars</a></li>
                <li class="breadcrumb-item">
                  <a href="/dashboard">List Car</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Update Car Information
                </li>
              </ol>
            </nav>
            <div class="d-flex justify-content-between">
              <h5>Update Car Information</h5>
            </div>

            <form
              action="/car/edit/<%= car._id %>"
              method="post"
              enctype="multipart/form-data"
              autocomplete="off"
            >
              <div class="bg__white mt-2">
                <div class="row">
                  <div class="col-lg-6">
                    <div class="row align-items-center">
                      <div class="col-lg-4">
                        <p>Nama<i style="color: #fa2c5a">*</i></p>
                      </div>
                      <div class="col-lg-8">
                        <input
                          name="name"
                          type="text"
                          class="form-control"
                          value="<%= car.name %>"
                          id="exampleFormControlInput1"
                          placeholder="Avanza"
                        />
                      </div>
                    </div>
                    <div class="row align-items-center mt-3">
                      <div class="col-lg-4">
                        <p>Sewa Per Hari<i style="color: #fa2c5a">*</i></p>
                      </div>
                      <div class="col-lg-8">
                        <input
                          name="price"
                          type="number"
                          class="form-control"
                          id="exampleFormControlInput1"
                          value="<%= car.price %>"
                        />
                      </div>
                    </div>
                    <div class="row align-items-center mt-3">
                      <div class="col-lg-4">
                        <p>Ukuran<i style="color: #fa2c5a">*</i></p>
                      </div>
                      <div class="col-lg-8">
                        <select
                          name="category"
                          class="form-select"
                          aria-label="Default select example"
                        >
                          <option value="<%= car.category %>" selected hidden>
                            <%= car.category %>
                          </option>
                          <option value="small">Small</option>
                          <option value="medium">Medium</option>
                          <option value="large">Large</option>
                        </select>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-lg-4">
                        <p>Foto<i style="color: #fa2c5a">*</i></p>
                      </div>
                      <div class="col-lg-8">
                        <input
                          name="image"
                          class="form-control"
                          type="file"
                          id="formFile"
                          value="<%= car.image %>"
                        />
                        <small>File size max. 2MB</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="d-flex button__down">
                <button class="btn button__secondary me-3" type="reset">
                  Cancel
                </button>
                <button class="btn button__primary me-3" type="submit">
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('./layouts/footer') -%>
